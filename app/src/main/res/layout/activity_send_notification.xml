<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SendNotification">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:backgroundTint="@color/endColor"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/back"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:scaleType="centerInside"
                android:id="@+id/backBtn"
                app:tint="@color/white" />

            <TextView
                android:layout_toEndOf="@id/backBtn"
                android:layout_alignTop="@id/backBtn"
                android:layout_alignBottom="@id/backBtn"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa"
                android:gravity="center"
                android:text="Send Information"
                android:textColor="@color/white"
                android:letterSpacing=".1"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

        </RelativeLayout>

    </com.google.android.material.navigation.NavigationView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nav"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="@dimen/_165sdp"
                android:layout_height="@dimen/_165sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:src="@drawable/logo"/>

            <androidx.cardview.widget.CardView
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_17sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/comfortaa"
                        android:text="@string/student_s_full_name"
                        android:textColor="@color/startColor"
                        android:letterSpacing=".1"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/studentNameLbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/startColor"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:fontFamily="@font/baloo_bhai_2"
                        android:textSize="@dimen/_12ssp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Driver's Information:"
                        android:letterSpacing=".1"
                        android:fontFamily="@font/comfortaa"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:textStyle="bold"
                        android:textColor="@color/startColor"
                        android:textSize="@dimen/_15ssp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:textColor="@color/startColor"
                        android:fontFamily="@font/comfortaa"
                        android:textStyle="bold"
                        android:letterSpacing=".1"
                        android:textSize="@dimen/_12ssp"/>

                    <TextView
                        android:id="@+id/driverNameLbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/startColor"
                        android:fontFamily="@font/baloo_bhai_2"
                        android:textSize="@dimen/_12ssp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Driver's License Number"
                        android:fontFamily="@font/comfortaa"
                        android:textStyle="bold"
                        android:letterSpacing=".1"
                        android:textColor="@color/startColor"
                        android:textSize="@dimen/_12ssp"/>

                    <TextView
                        android:id="@+id/dLNoLbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/startColor"
                        android:fontFamily="@font/baloo_bhai_2"
                        android:textSize="@dimen/_12ssp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vehicle Registration Number"
                        android:fontFamily="@font/comfortaa"
                        android:textStyle="bold"
                        android:letterSpacing=".1"
                        android:textColor="@color/startColor"
                        android:textSize="@dimen/_12ssp"/>

                    <TextView
                        android:id="@+id/vRegNoLbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/startColor"
                        android:fontFamily="@font/baloo_bhai_2"
                        android:textSize="@dimen/_12ssp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Franchise Number"
                        android:fontFamily="@font/comfortaa"
                        android:textStyle="bold"
                        android:letterSpacing=".1"
                        android:textColor="@color/startColor"
                        android:textSize="@dimen/_12ssp"/>

                    <TextView
                        android:id="@+id/franchiseLbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/startColor"
                        android:fontFamily="@font/baloo_bhai_2"
                        android:textSize="@dimen/_12ssp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:fontFamily="@font/comfortaa"
                        android:textStyle="bold"
                        android:letterSpacing=".1"
                        android:textColor="@color/startColor"
                        android:textSize="@dimen/_12ssp"/>

                    <TextView
                        android:id="@+id/locationLbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/startColor"
                        android:fontFamily="@font/baloo_bhai_2"
                        android:textSize="@dimen/_12ssp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sendInfoBtn"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/comfortaa"
                android:text="Send Information"
                android:textColor="@color/white"
                app:iconGravity="textStart"
                app:icon="@drawable/baseline_textsms_24"
                app:iconTint="@color/white"
                android:textSize="@dimen/_10ssp"
                android:padding="@dimen/_10sdp"
                android:paddingStart="@dimen/_22sdp"
                android:paddingEnd="@dimen/_22sdp"
                android:backgroundTint="@color/teal_200"
                app:cornerRadius="@dimen/_5sdp"
                app:strokeColor="@color/endColor" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/viewBtn"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/comfortaa"
                android:text="Send Location"
                app:iconGravity="textStart"
                app:icon="@drawable/baseline_location_on_24"
                app:iconTint="@color/white"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp"
                android:padding="@dimen/_10sdp"
                android:paddingStart="@dimen/_22sdp"
                android:paddingEnd="@dimen/_22sdp"
                app:cornerRadius="@dimen/_5sdp"
                android:backgroundTint="#C55151"
                app:strokeColor="@color/endColor" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>